{{> /layout/header}}

<div class="container">
    <br>
    <div class="text-center m_txt_title m_font_xxl m_ph_lg">공지사항</div>
    <br>
    <hr>

    <main class="mb-4">
        <div class=" px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="List-container">
                    <div class="row mt-1 header">

                        <div class="col-1 board-title">제목</div>
                        <p class="col-8" style="word-break:break-all;"> {{boardsId.title}}</p>
                        <p class="col-1"> {{boardsId.createDate}} </p>
                        <p class="col-1">{{boardsId.user.userName}}</p>
                        <p class="col-1">조회수</p>
                    </div>


                    <div class="board-container">
                        <br>
                        <p class="content" style="word-break:break-all;">
                            {{{boardsId.content}}}
                        </p>
                    </div>
                    <br>
                    <br>

                    <button style="background-color: #E1E2E1; float: right; margin: 10px;" type="submit"
                        class="btn">목록으로</button>
                    {{#userAuth}}
                    <button id="btn-delete" style="background-color: #E1E2E1; float: right; margin: 10px;" type="submit"
                        class="btn">삭제</button>
                    <button style="background-color: #E1E2E1; float: right; margin: 10px;" type="submit"
                        class="btn">수정</button>
                    {{/userAuth}}
                    <br><br><br>
                    <div class="list-group" style="margin-top: 20px; margin-bottom: 20px;">
                        <a href="#" class="list-group-item">이전글: </a>
                        <a href="#" class="list-group-item">다음글: </a>
                    </div>

                </div>
            </div>
            <nav>

        </div>
    </main>
</div>

<script src="/js/admin.js"></script>

{{> /layout/footer}}